function zoomin()
{
	if (zoom !=2)
	{
		var innerDiv= document.getElementById("innerDiv");
		var top = stripPx(innerDiv.style.top);
		var left = stripPx(innerDiv.style.left);
		innerDiv.style.top = (top*2) + "px";
		innerDiv.style.left =(left*2) + "px";
		if(zoom ==0)
		{
			zoom =1;
		}
		else
		{
			zoom =2;
		}
	}
	checkTiles();
}

function zoomout()
{
	if (zoom !=0)
	{
		var innerDiv= document.getElementById("innerDiv");
		var top = stripPx(innerDiv.style.top);
		var left = stripPx(innerDiv.style.left);
		innerDiv.style.top = Math.floor(top/2) + "px";
		innerDiv.style.left = Math.floor(left/2) + "px";
		if(zoom ==1)
		{
			zoom =0;
		}
		else
		{
			zoom =1;
		}
	}
	checkTiles();
}

